
<%= render 'shared/ie' %>
<%= render 'shared/global_head' %>
<%= render 'shared/js' %>

<%= form_for @additional_exam_group, :url => {:controller => 'additional_exam_groups', :action => 'create', :batch_id => @batch} do |f| %>
<fieldset class="grey-bg">
					<legend>Required fields</legend>
					 <div class="columns">
					 	<p class="colx3-left required">
		<label for="exam_name">Name</label>
		<%= f.text_field :name, :value=>@name ,:size=>20%>
	</p>
 
 
 <p class="colx3-right ">
   <%= f.label :exam_type %>
    <%= f.hidden_field :exam_type,:value=>@type %>
     <%= f.hidden_field :students_list,:value=>@students_list %>
   
    <%= f.text_field :exam_type, :value=>@type,:disabled=>true,:size =>20 %> <%= link_to "Change Type", :controller => 'additional_exam_groups', :action => 'new', :id => @batch.id, :ename=>@name %>
   </p>
 
  
  </div>
	
	<div class="columns">
		<%unless @type=='Custom'%>
		 <p class="colx3-left select-fixed-width1">
		<label for="exam_type">Connect To</label>
		<%unless @exam_group.nil?%>
	<%= f.select :exam_group_id, @exam_group.map { |s| [s.name, s.id]},:prompt =>'Select ' %>
	<%end%>
	</p>
	<%end%>
	<p class="colx3-right">
		<label for="exam_name">Reason</label>
		<%= f.text_field :reasion ,:size=>20%>
	</p>
		</div>
	
 
</fieldset>
  <h3 align="center">    Enter exam related details here:  </h3>

  <table class="table exammarks no-margin" id="exammf" cellspacing="0" width="100%">
  	<thead>
		<tr>
			<th class="black-cell"></th>
			<th scope="col"> Subject Name </th>
			<th scope="col"> Topic Name </th>
			<th scope="col">Start time </th>
			<th scope="col">End time </th>
			<th scope="col">Do not create </th>
			
		</tr>
	</thead>
    <tbody>

<%subject_name='No'%>
    <%= f.fields_for :additional_exams do |exam_form| %>
    <% if subject_name == exam_form.object.subject.name%>
			<% subject_name = ""%>
			<%else%>
			<% subject_name = exam_form.object.subject.name%>
			<%end%>
      <tr>
      	<td class="th table-check-cell"></td>
       <td ><h3><%= exam_form.object.subject.name %></h3><%= exam_form.hidden_field :subject_id %> </td>
        <td ><%= exam_form.object.topic.name %><%= exam_form.hidden_field :topic_id %> </td>
         <td><%= exam_form.text_field :start_time ,:value =>@date, :class => "timepicker", :size => '15'%></td>
        <td> <%= exam_form.text_field :end_time ,:value =>@date, :class => "timepicker", :size => '15'%></td>
        <td> <%= exam_form.check_box :_destroy %> </td>
        <%= exam_form.hidden_field :minimum_marks,:value =>0 %> 
      	  <%= exam_form.hidden_field :maximum_marks,:value =>0 %> 
      </tr>
    <% end %>
    </tbody>
  </table>
  <fieldset class="grey-bg no-margin">
	<legend>
		Action
	</legend>
	<p class="input-with-button">
		<%= f.submit "Save", :class => "big-button", :id => 'create_grade_additional_exam'%>
	</p>
</fieldset>

  

<% end %>
