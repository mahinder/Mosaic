
<%= render 'shared/ie' %>
<%= render 'shared/global_head' %>
<%= render 'shared/js' %>
<%= form_for @additional_exam_group, :url => {:controller => 'additional_exam_groups', :action => 'create', :batch_id => @batch} do |f| %>

<fieldset class="grey-bg">
					<legend>Required fields</legend>
  <div class="columns">
	<p class="colx3-left required">
		<label for="exam_name">Name</label>
		<%= f.text_field :name, :value=>@name, :size =>20,:class=>'full-width full-length',:field_name=>'Name' %>
	</p>
	<p class="colx3-left required">
		<label for="exam_type">Exam Type</label>
		<%= f.hidden_field :exam_type,:value=>@type %>
		 <%= f.hidden_field :students_list,:value=>@students_list %>
		<%= f.text_field :exam_type, :value=>@type,:disabled=>true ,:size =>20%> <%= link_to "Change Type", :controller => 'additional_exam_groups', :action => 'new', :batch_id => @batch.id, :ename=>@name %>
	</p>
	<p class="colx3-right select-fixed-width1">
		<label for="exam_type">Connect To</label>
		<%unless @exam_group_marks_type.nil?%>
		
	<%= f.select :exam_group_id, @exam_group_marks_type.map { |s| [s.name, s.id]},:prompt =>'Select ' %>
	<%else%>
	<%= f.select :exam_group_id, @exam_group_mark_grades_type.map { |s| [s.name, s.id]},:prompt =>'Select ' %>
	<%end%>
	</p>
  </div>
  <div class="columns">
	<p class="colx3-left required">
		<label for="exam_name">Maximum Marks</label>
		<%= f.text_field :maximum_marks ,:size =>20%>
	</p>
	<p class="colx3-left required">
		<label for="exam_type">Minimum Marks</label>
		<%= f.text_field :minimum_marks,:size =>20 %>
	</p>
	<p class="colx3-right">
					<label for="exam_type">Reason</label>
					<%= f.text_field :reasion,:size =>15%>
					</p>
</div>
  </fieldset>
  
<h3 align="center">Enter exam related details here:</h3>
<% i= 0%>
<div class="no-margin">	
  <table class="table aexammarks" id="aexammf" cellspacing="0" width="100%">
  	<thead>
		<tr>
			<th class="black-cell"></th>
			<th scope="col"> Subject Name </th>
			<th scope="col"> Topic Name </th>
			<th scope="col">Max Marks</th>
			<th scope="col">Min Marks</th>
			<th scope="col">Start time </th>
			<th scope="col">End time </th>
			<th scope="col">Do not create </th>
		</tr>
	</thead>
    <tbody>
    	
    	
       
    <%= f.fields_for :additional_exams do |exam_form| %>
        <% i +=1%>
       <tr>
      	 <td class="th table-check-cell"></td>
      	 <td ><h3><%= exam_form.object.subject.name %></h3><%= exam_form.hidden_field :subject_id %> </td>
        <td ><%= exam_form.object.topic.name %><%= exam_form.hidden_field :topic_id %> </td>
        <td ><%= exam_form.text_field :maximum_marks, :class => "maximum", :size => 4 ,:id =>"max#{i}"%> </td>
        <td ><%= exam_form.text_field :minimum_marks, :class => "minimum", :size => 4,:id =>"min#{i}"%> </td>
        <td><%= exam_form.text_field :start_time ,:value =>@date, :class => "timepicker start_time", :size => '15'%></td>
        <td><%= exam_form.text_field :end_time ,:value =>@date+1.hour, :class => "timepicker end_time", :size => '15'%></td>
       <td><%= exam_form.check_box :_destroy,:class=>'bolean' %></td>
      </tr>
    <% end %>
    
    </tbody>
  </table>
</div>
 <input type="hidden" id="index" value="<%= i %>" />
 <fieldset class="grey-bg no-margin">
	<legend>
		Action
	</legend>
	<p class="input-with-button">
		<%= f.submit "Save", :class => "big-button", :id => 'create_additional_exam'%>
	</p>
</fieldset>


<% end %>