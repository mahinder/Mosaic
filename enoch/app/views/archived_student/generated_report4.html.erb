<style type="text/css">
#somecell{
width: 50px;
height: 50px;
overflow: scroll;
}
</style>

<div class="block-border" id="outer_block">
<div class="block-content form">
  <h1>Exams</h1>
  <h3>Grouped Exam Reports</h3>
<div class="block-controls enoch_block">
					<ul class="controls-tabs js-tabs">
						<li >
							<%= link_to_function image_tag("/assets/icons/web-app/32/Back.png"), "history.back()" %>
						</li>
					</ul>
				</div>	

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    
 
    <h4 align="center"><%= @student.batch.name %> - <%= @student.batch.course.full_name %></h4>
    <h4><%= @student.full_name %></h4>
    <table id="table" class="table" width="100%">
    	<thead>
				<tr >
					<th scope="col">Subject</th>
					<% @exam_groups.each do |exam_group| %> <th overflow: scroll><%= exam_group.name %></th>
					<% end %> <th scope="col">Subject Wise Percentage(%)</th>
				</tr>
			</thead>
			<tbody>
      <% @subjects.each do |subject| %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-2" ><%= subject.name %></td>
          <% @mmg = 1;@g = 1 %>
<%@obtain_marks =0%>
<%@totl_marks =0%>
          <% @exam_groups.each do |exam_group| %>

            <% @exam = Exam.find_by_subject_id_and_exam_group_id(subject.id,exam_group.id) %>
              <% exam_score = ArchivedExamScore.find_by_student_id(@student.id, :conditions=>{:exam_id=>@exam.id})unless @exam.nil? %>
              <% unless exam_score.nil?  %>
              <% if exam_group.exam_type == "MarksAndGrades" %>
                <td class="col-3"><% unless @exam.nil?  %>
<%= exam_score.marks %> | <%= @exam.maximum_marks %> | <%= exam_score.grading_level.name %></td>
      <% end  %>
      <% elsif exam_group.exam_type == "Marks" %>
                <td class="col-3"><%= exam_score.marks unless @exam.nil? %> | <%= @exam.maximum_marks unless @exam.nil?%></td>
                <%@obtain_marks += exam_score.marks%>
                <%@totl_marks += @exam.maximum_marks%>
              <% else %>
                <td class="col-3"><%= exam_score.grading_level.name unless exam_score.nil?%></td>
                <% @g = 0 %>
              <% end %>
              <% else %>
                <td>-</td>
              <% end %>
          <% end %>
          <% total_score = ArchivedExamScore.new() %>
          <% if @mmg == @g %>
            <td class="col-1"><b><%unless @totl_marks ==0%>
            	<%@aggr = @obtain_marks*100/@totl_marks%>
            	<%=@aggr %><%end%></b></td>
          <% else %>
            <td class="col-1">-</td>
          <% end %>
        </tr>
</tbody>
      <% end %>
      <tr class="tr-head">
        <td><b>Total</b></td>
        <% @max_total = 0 %>
        <% @marks_total = 0 %>

        <% @exam_groups.each do |exam_group| %>
          <% if exam_group.exam_type == "MarksAndGrades" %>
            <td><%= exam_group.archived_total_marks(@student)[0] %></td>
          <% elsif exam_group.exam_type == "Marks" %>
            <td><b><%= exam_group.archived_total_marks(@student)[0] %></b></td>
          <% else %>
            <td>-</td>
          <% end %>
          <% unless exam_group.exam_type == "Grades" %>
          <% @max_total = @max_total + exam_group.archived_total_marks(@student)[1] %>
          <% @marks_total = @marks_total + exam_group.archived_total_marks(@student)[0] %>
          <% end %>
        <% end %>
        <td><b>
        	<% percentage = (@marks_total*100/@max_total.to_f)  unless @max_total==0 %>
        	Aggregate % = <%=percentage %> </b></td>
      </tr>
      <tr></tr>
    </table>
    <% if @mmg == @g %>
      
      <h4>Total Marks = <%= @marks_total %> /<%=@max_total%></h4>
    <% end %>


<fieldset class="grey-bg no-margin">
	<legend>
		Action
	</legend>
      <%= link_to "PDF Report", { :action => "generated_report4_pdf", :type => @type, :student => @student.id},:target => '_blank' ,:class => 'big-button' %></li>

</fieldset>

  </div></div>