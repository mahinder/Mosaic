<div class="block-border" id="outer_block">
<div class="block-content form">
  <h1>Exams</h1>
  <h3>Grouped Exam Reports</h3>

<div class="block-controls enoch_block">
					<ul class="controls-tabs js-tabs">
						<li >
							<%= link_to_function image_tag("/assets/icons/web-app/32/Back.png"), "history.back()" %>
						</li>
					</ul>
				</div>	
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    
  
    <h4 align="center"><%= @student.batch.name %> - <%= @student.batch.course.full_name %></h4>
    <h4><%= @student.full_name %> | <%= @grouped_exams.grouped_exam_name%></h4>
    <table id="listing" class="table" width="100%">
    	<thead>
				<tr>
					<th scope="col">Subject</th>
					<% @exam_groups.each do |exam_group| %>
					<%@weightage = ConnectExam.find_by_exam_group_id_and_grouped_exam_id(exam_group.id,@grouped_exams.id) %> <th scope="col"><%= exam_group.name %>(<%="%.2f" %@weightage.weightage%>%)</th>
					<% end %> <th scope="col">Subject Wise Percentage(%)</th>
				</tr>
			</thead>
			<tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.name %></td>
          <% @mmg = 1;@g = 1 %>
<% @to_obta = 0%>
<%@sub_aggr=0%>
						<% @to_mto = 0%>
          <% @exam_groups.each do |exam_group| %>
           <%@weightage = ConnectExam.find_by_exam_group_id_and_grouped_exam_id(exam_group.id,@grouped_exams.id) %>
            <% @exam = Exam.find_by_subject_id_and_exam_group_id(subject.id,exam_group.id) %>
              <% exam_score = ArchivedExamScore.find_by_student_id(@student.id, :conditions=>{:exam_id=>@exam.id})unless @exam.nil? %>
              <% unless @exam.nil?%>
              <% if exam_group.exam_type == "MarksAndGrades" %>
                <td><% unless exam_score.nil?%><%= exam_score.marks %> | <%= @exam.maximum_marks %> | <%= exam_score.grading_level.name %></td>
      <% end  %>
      <% elsif exam_group.exam_type == "Marks" %>
                <td><%= exam_score.marks unless exam_score.nil? %> | <%= @exam.maximum_marks unless @exam.nil?%></td>
               
                <%@obt = exam_score.marks unless exam_score.nil?%><%@tot = @exam.maximum_marks%>
                <% @to_obta +=@obt %>
			    <% @to_mto +=@tot%>
			    <% unless @obt.nil? or @tot.nil?%>
							
							<%@sub_per = @obt*100/@tot%><%unless @weightage.nil?%><%@sub_p = @sub_per* @weightage.weightage/100%><%else%><%@sub_p = 0%><%end%>
							<%@sub_aggr += @sub_p %>
							<%end%>
                
              <% else %>
                <td><%= exam_score.grading_level.name unless exam_score.nil?%></td>
                <% @g = 0 %>
              <% end %>
              <% else %>
                <td><%='N.A'%></td>
              <% end %>
              
          <% end %>
          <% total_score = ArchivedExamScore.new() %>
          <% if @mmg == @g %>
            <td><b><%= "%.2f" %@sub_aggr%></b></td>
          <% else %>
            <td>gg</td>
          <% end %>
        </tr>
</tbody>
      <% end %>
      <tr>
        <td><b>Total</b></td>
        <% @max_total = 0 %>
        <% @marks_total = 0 %>
         <% @max_totals = 0 %>
        <% @marks_totals = 0 %>
<% @agg=0%>
        <% @exam_groups.each do |exam_group| %>
         <%@weightage = ConnectExam.find_by_exam_group_id_and_grouped_exam_id(exam_group.id,@grouped_exams.id) %>
          <% if exam_group.exam_type == "MarksAndGrades" %>
            <td><%= exam_group.archived_total_marks(@student)[0] %></td>
          <% elsif exam_group.exam_type == "Marks" %>
            <td><b><%= exam_group.archived_total_marks(@student)[0] %>/<%= exam_group.archived_total_marks(@student)[1] %></b></td>
          <% else %>
            <td>-</td>
          <% end %>
          <% unless exam_group.exam_type == "Grades" %>
          <% @max_total = exam_group.archived_total_marks(@student)[1] %>
          <% @max_totals +=@max_total %>
        
          <% @marks_total =exam_group.archived_total_marks(@student)[0] %>
          <% @marks_totals +=@marks_total %>
          <%unless @max_total==0%>
          <%@to = (@marks_total*100/@max_total)%><%unless @weightage.nil?%><%@fdfd = @to*@weightage.weightage/100 %><%else%><%@fdfd = 0%><%end%>
					<% @agg += @fdfd%>
          <%end%>
          <% end %>
        <% end %>
        <td><b> Aggregate %=<%= "%.2f" %@agg%></b></td>
      </tr>
      <tr></tr>
    </table>
    <% if @mmg == @g %>
      
      <h4>Total Marks = <%=@marks_totals%>/<%= @max_totals %></h4>
    <% end %>


<fieldset class="grey-bg no-margin">
	<legend>
		Action
	</legend>
      <%= link_to "PDF Report", { :action => "generated_report4_pdf", :type => @type, :student => @student.id},:target => '_blank' ,:class => 'big-button' %></li>

</fieldset>

  </div></div>