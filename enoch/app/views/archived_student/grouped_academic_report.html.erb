<div class="block-border" id="outer_block">
	<div class="block-content form">
  <h1>Grouped Exam Wise Acadamic report</h1>
  
  <div class="block-controls enoch_block">
			<ul class="controls-tabs js-tabs">
				<li >
					<%= link_to_function image_tag("/assets/icons/web-app/32/Back.png"), "history.back()" %>
				</li>
			</ul>
		</div>

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <h3><%= @student.full_name %> | <%= @student.batch.full_name %> | <%= @grouped_exams.grouped_exam_name %></h3>

  <table id="listing" class="table" width="100%">
  	<thead>
    <tr>
      <th scope="col">Subject</th>
      <% @exam_groups.each do |exam_group| %>
       <%@weightage = ConnectExam.find_by_exam_group_id_and_grouped_exam_id(exam_group.id,@grouped_exams.id) %>
        <th scope="col"><%= exam_group.name %>(<%= "%.2f" %@weightage.weightage%>%)</th>
      <% end %>
      <th>Total</th>
    </tr>
    </thead>
    <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.code %></td>
        <% @mmg = 1;@g = 1 %>
        <%@ob_marks =0%>
        <%@to_marks=0%> 
        <%@sub_aggr=0%>
        <% @exam_groups.each do |exam_group| %>
        <%@weightage = ConnectExam.find_by_exam_group_id_and_grouped_exam_id(exam_group.id,@grouped_exams.id) %>
          <% @exam = Exam.find_by_subject_id_and_exam_group_id(subject.id,exam_group.id) %>
          <% exam_score = ArchivedExamScore.find_by_student_id(@student.id, :conditions=>{:exam_id=>@exam.id}) unless @exam.nil? %>
          <% if exam_group.exam_type == "MarksAndGrades" %>
            <td><% unless @exam.nil?  %>
                <%  unless exam_score.nil? %>
                  <%= exam_score.marks%> | <%= @exam.maximum_marks  %> | <%= exam_score.grading_level.name %>
                <% end %>
              <%  end %></td>
          <% elsif exam_group.exam_type == "Marks" %>
            <td>
            	 <% unless @exam.nil? %>
               <% unless exam_score.nil? %>
               <%= exam_score.marks %> | <%= @exam.maximum_marks  %>
                             <%@obt = exam_score.marks %><%@tot = @exam.maximum_marks%>
							<% unless @obt.nil? or @tot.nil?%>
							<%@sub_per = @obt*100/@tot%><%unless @weightage.nil?%><%@sub_p = @sub_per* @weightage.weightage/100%><%else%><%@sub_p = 0%><%end%>
							<%@sub_aggr += @sub_p %>
							<%end%>
							<%else%>-
            <% end %>
            <%else%>
            <%= "N.A" %>
           <% end %></td>
          <% else %>
            <td><%= exam_score.grading_level.name unless exam_score.nil? %></td>
            <% @g = 0 %>
          <% end %>
        <% end %>
        <% total_score = ArchivedExamScore.new() %>
        <% if @mmg == @g %>
          <td><b>
           <%="%.2f" %@sub_aggr %>
          	</b></td>
        <% else %>
          <td>-</td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
    <tr>
      <td><b>Total</b></td>
      <% @max_total = 0 %>
      <% @marks_total = 0 %>
       <% @get_mark = 0%>
					<% @total_mark = 0%>
<%@aggr=0%>
      <% @exam_groups.each do |exam_group| %>
       <%@weightage = ConnectExam.find_by_exam_group_id_and_grouped_exam_id(exam_group.id,@grouped_exams.id) %>
        <% if exam_group.exam_type == "MarksAndGrades" %>
          <td><%= exam_group.archived_total_marks(@student)[0] %></td>
        <% elsif exam_group.exam_type == "Marks" %>
          <td><b><%= exam_group.archived_total_marks(@student)[0] %>/<%= exam_group.archived_total_marks(@student)[1] %></b></td>
        <% else %>
          <td>-</td>
        <% end %>
        <% unless exam_group.exam_type == "Grades" %>
          <% @max_total = @max_total + exam_group.archived_total_marks(@student)[1] %>
          <% @marks_total = @marks_total + exam_group.archived_total_marks(@student)[0] %>
          <% @total_mark = exam_group.archived_total_marks(@student)[1] %>
					<%unless @total_mark ==0 %>
					<%@get_mark = exam_group.archived_total_marks(@student)[0] %>
					
					<%@to = (@get_mark*100/@total_mark)%><%unless @weightage.nil?%><%@fdfd = @to*@weightage.weightage/100 %><%else%><%@fdfd = 0%><%end%>
					<% @aggr += @fdfd%>
			<%end%>
        <%  end %>
      <% end %>
      <td><b> 
      	 Aggregate <%="%.2f" %@aggr %>
      
      </b></td>
    </tr>
  </table>
  <% if @mmg == @g %>
    <h4> Total Marks = <%="%.2f" %@marks_total %>/<%="%.2f" %@max_total %></h4>
  <% end %>

</div>
</div>