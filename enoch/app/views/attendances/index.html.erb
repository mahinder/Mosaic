<div class="block-border" id="outer_block">
	<div class="block-content form">
		<h1>Attendance Register</h1>
		<%= render 'shared/form_notice' %>
		<div class="block-controls enoch_block">
			<ul class="controls-tabs js-tabs">
				<li >
					<a id="stopBackWorking" href="/student_attendance/index" title ="Back"> <img src="/assets/icons/web-app/32/Back.png" width="24" height="24"></a>
				</li>
			</ul>
		</div>
		<div class="columns">
			<%if @user.admin == true%>
			<p class="colx3-left required select-fixed-width1" >
				<label for="student_grade">Course</label>
				<span class="relative"> <%= select :attendance_course_search, :course_id, Course.active.map{|c| [c.course_name, c.id]},:prompt => "Select" %></span>
			</p>
			<p class="colx3-center required select-fixed-width1"  id="change_attendance_batch">
				<span class="relative"><%= render :partial => "batch_attendance"%></span>
			</p>
			<%else%>
			<p class="colx3-left required select-fixed-width1" id="change_attendance_batch">
				<span class="relative"><%= render :partial => "batch_attendance"%></span>
			</p>
			<%end%>
			<p class="colx3-right required">
				<label for="admission_date">Entry Date</label>
				<span class="input-type-text"><%= text_field_tag :period_entry,nil,:value => (Date.today).strftime('%d''-''%m''-''%Y'), :class => "datepicker", :size => 20,:onclick => "setIdOfDatePicker()" ,:readonly => "1"  %><%= image_tag "icons/fugue/calendar-month.png" %></span>
			</p>
		</div>
		<div id="loadingAttendance"></div>
		<input type="hidden"name="UserSIDS" id="UserSIDS" value="<%= @user.role_name %>" />
		<div id="newTable"></div>
		<br />
		<br />
		<br />
		<fieldset class="grey-bg no-margin" id="">
			<legend>
				Action
			</legend>
			<div class="columns">
				<p class="colx2-left">
					<button type="submit" id="save_attendances" value="" style="margin-top: 1.5em; display: none">
						Save
					</button>
				</p>
			</div>
		</fieldset>
	</div>
</div>
