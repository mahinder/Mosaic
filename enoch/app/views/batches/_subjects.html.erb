<table id="subject-table" class="table subjects-table no-margin" cellspacing="0" width="100%">
	<thead>
		<tr>
			<th scope="col"> Is Common </th>
			<th scope="col"><span class="column-sort"> <a href="#" title="Sort up" class="sort-up"></a> <a href="#" title="Sort down" class="sort-down"></a> </span> Subject </th>
			<th scope="col"><span class="column-sort"> <a href="#" title="Sort up" class="sort-up"></a> <a href="#" title="Sort down" class="sort-down"></a> </span> Parent Skill </th>
			<th scope="col"><span class="column-sort"> <a href="#" title="Sort up" class="sort-up"></a> <a href="#" title="Sort down" class="sort-down"></a> </span> Teacher </th>
			<th scope="col"><span class="column-sort"> <a href="#" title="Sort up" class="sort-up"></a> <a href="#" title="Sort down" class="sort-down"></a> </span> Room </th>
			<th scope="col"> View Students </th>
			 <th scope="col"> Add Student </th> 
			<th scope="col"> View Topics </th>
		</tr>
	</thead>
	<tbody>
		<% @subjects.each do |subject| %>
		<% @skill = Skill.find_by_id(subject.skill_id)%>
		<tr >
			<td class="th table-check-cell"> <% if  subject.is_common == true %>
			<input type="checkbox" name="<%= subject.id %>" class ="skill_check" checked >
			<%else%>
			<input type="checkbox" name="<%= subject.id %>" class ="skill_check" >
			<%end%> </td>
			<td ><%= subject.name%></td>
			<% if subject.elective_group.nil?%> <td > <%= subject.elective_group %></td>
			<%else%> <td > <%= subject.elective_group.name %> </td>
			<%end%> <td >
			<ul class="keywords">
				<% @employees =  subject.employees %>
				<%unless @employees.empty?%>
				<% @employees.each do |employee| %>
				<li>
					<%= employee.first_name  %>
				</li>
				<%end%><%end%>
			</ul></td>
			<% @rooms = subject.rooms %> <td >
			<ul class="keywords">
				<%unless @rooms.empty?%>
				<% @rooms.each do |room| %>
				<li>
					<%= room.name  %>
				</li>
				<%end%><%end%>
			</ul></td>
			<td >
			<input name="subject_id" type="hidden" id ="subject_id_remove" value = "<%= subject.id%>"/>
			<input name="course_id" type="hidden" id ="course_id_remove" value = "<%= @course.id%>"/>
			<%= link_to (image_tag("/assets/icons/fugue/magnifier.png" ,:width =>"16", :height => "16" )),{:action => "subject_students" ,:elective_group => subject.elective_group, :batch => @batch,:subject => subject,:course_id => @course }, :remote => true%> </td>
			 <td ><% if  subject.is_common == true %>
			<input name="subject_id_elective" type="hidden" id ="elective_subject_id_group_<%= subject.id%>" value = "<%= subject.elective_group %>"/>
			<%= link_to (image_tag("/assets/icons/add.png" ,:width =>"16", :height => "16" )),"", :class=> "assign-student" ,:data_subject => subject.id , :batch => @batch.id, :data_elective_group => subject.elective_group ,:data_course => @course.id%>
			<%else%>
			<%= image_tag("/assets/icons/add.png" ,:width =>"16", :height => "16" )%>
			<%end%> </td> 
			<td><a href="#" class ="topic_view" title="Topic" data-subject = "<%= subject.id%>"><%= image_tag("/assets/icons/fugue/magnifier.png" ,:width =>"16", :height => "16" )%></a></td>
		</tr>
		<% end %>
	</tbody>
</table>
