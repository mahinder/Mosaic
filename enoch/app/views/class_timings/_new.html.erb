
<div class="block-border" id="outer_block">
	<%= form_for @class_timing,:url => { :action => 'create'},:remote => true, :html => { :class => "block-content form", :id => "course-form"} do |form| %>
	<h1></h1>
	<%= render 'shared/form_errors', :object => form.object %> 
	<fieldset class="grey-bg">
		 <% batch_id = (@batch.nil? ? nil : @batch.id) %>
    		<%= form.hidden_field :batch_id, :value => batch_id %>
		<div class="colx3-left">
			<label for="course_name">Name</label>
			<span class="relative"> <%= form.text_field :name ,:class =>"full-width"%> </span>
		</div>
		<div class="colx3-center">
			<label for="course_code">Start Time</label>
			<span class="relative"> <%= time_select :class_timing, :start_time, {:minute_step => 5} %> </span>
		</div>
		<div class="colx3-right">
			<label for="course_level">End Time</label>
			<span class="relative"> <%= time_select :class_timing, :end_time, {:minute_step => 5} %></span>
		</div>
		<br />
		<div class="colx3-left ">
			<label for="complex-en-url">Is a break</label>
				<span class="relative"> <%= form.check_box :is_break, :checked => false %> Is a break </span>
		</div>
	</fieldset>
	
	<!-- <%=form.submit 'â–º Save', :class => 'big-button' %>	 -->
	
	
	<%end%>
	</div>
















