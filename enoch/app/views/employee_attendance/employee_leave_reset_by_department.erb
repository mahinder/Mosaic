<div class="block-border" id="outer_bloc">
	<div class="block-content form">
		<h1>Reset Employee Leave Department Wise</h1>
		<div class="block-controls enoch_block">
			<ul class="controls-tabs js-tabs">
				<li >
					<%= link_to image_tag("/assets/icons/web-app/32/Back.png"), :back %>
				</li>
			</ul>
		</div>
		<% unless flash[:notice].nil? %>
		<ul class="message success grid_12">
			<li>
				<strong><%= flash[:notice] %></strong>
			</li>
			<li class="close-bt"></li>
		</ul>
		<% end %>

		<%= form_for :employee_department do |s| %>
		<div class="label-field-pair required select-fixed-width1">
			<label for="employee_department_select">Department</label>
			<div class="text-input-bg">
				<%= select :leave_employee_department, :department_id, @departments.map {|c| [c.name, c.id]},{:prompt => 'Select'} %>
			</div>
		</div>
		<% end %>
		<br />
		<div id="department-list"></div>
	</div>
</div>