			<div class="block-border" id="outer_block">
				<%= form_for @employee_grade,  :html => { :class => "block-content form", :id => "grades-form"} do |form| %>
				<%= render 'shared/form_errors', :object => form.object %>
				<h1>Employee Grade</h1>				
				<div class="block-controls enoch_block">
					<ul class="controls-tabs js-tabs">
						<li >
							<%= link_to image_tag("/assets/icons/web-app/32/Back.png"), :back %>
						</li>
					</ul>
				</div>					
				<fieldset class="grey-bg">
					<legend>Required fields</legend>
					<div class="colx3-left-double required">
						<label for="grade_name">Name</label>
						<span class="relative">
							<%= form.text_field :name, :class => "full-width full-length",:field_name=>'Name' %>
						</span>
					</div>
					<div class="colx3-right required">
						<label for="grade_priority">Priority</label>
						<span class="relative">
							<%= form.text_field :priority, :class => "full-width numeric full-length" ,:field_name => 'Priority'%>
						</span>
					</div>
				</fieldset>
								
				<fieldset>
					<legend>Other Information</legend>
					
					<div class="columns">
						<p class="colx2-left">
							<label for="complex-en-url">Max periods per day</label>
							<span class="relative">
								<%= form.text_field :max_hours_day, :class => "full-width numeric full-length" ,:field_name => 'Max periods per day'%>
							</span>
						</p>
						<p class="colx2-right">
							<label for="complex-en-subtitle">Max periods per week</label>
							<%= form.text_field :max_hours_week, :class => "full-width numeric full-length",:field_name => 'Max periods per week' %>
						</p>
					</div>
				</fieldset>
				
				<fieldset class="grey-bg no-margin">
					<legend>Action on create</legend>
					<div class="columns">
						<div class="colx2-left-double">
							<label for="simple-action">Status</label>
							<%= form.radio_button  "status", "true", :checked => "checked" %>&nbsp;<label for="complex-en-active-1">Active</label> 
							<%= form.radio_button  "status", "false" %>&nbsp;<label for="complex-en-active-0">Inactive</label>
						</div>
						<div class="colx2-right">
							<button id="create_grade" type="submit">Create</button>
							<button id="update_grade" type="button" >Update</button>
							<button id="reset_grade" type="button">Clear</button>
							<input type="hidden" id="current_object_id" name="current_object_id" value=""/>
						</div>
					</div>
				</fieldset>
				<% end %>
				
			</div>
			<br/>
			<div id="table-block" class="block-border">
				<%= render 'grades' %>
			</div>
