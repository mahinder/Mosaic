
<div class="block-border" id="outer_block">
	<div class="block-content form">
  <%= form_for :leave_count,:url=>{:action=>'employee_leave_count_update', :id=>@leave_count.id} do |c| %>
    <div id="form-content">
      <div class="label-field-pair">
        <label for="category_name">Leave name</label>
        <div class="text-bg"><%= @leave_type.name %></div>
      </div>

      <div class="label-field-pair">
        <label for="category_name">Available leave</label>
        <div class="text-input-bg"><%= c.text_field :leave_count %></div>
      </div>

      <div class="label-field-pair">
        <label for="category_name">Leave taken</label>
        <div class="text-bg"><%= @leave_count.leave_taken %></div>
      </div>
    </div>
  <%end%>
  </div>
  </div>