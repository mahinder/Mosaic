<div  style="overflow: auto;">
<table  class="table " cellspacing="0">
	<% unless @class_timings.empty?%>
	<thead>
		<tr>
			<th class="black-cell"></th>
			<th class="black-cell" style="width: 50px">Weekdays/Class Timing</th>
			<% @class_timings.each do |clss|%> <% unless clss.is_break == true %> <th scope="col"><%= clss.start_time.strftime("%I:%M %p")%>-<%= clss.end_time.strftime("%I:%M %p")%></th>
			<%else%> <th scope="col">Break</th>
			<%end%>
			<%end%>
		</tr>
	</thead>
	<tbody id = "employee_constraints_row">
		<% unless @weekdays.empty?%>
		<% @weekdays.each do |week|%>
		<tr>
			<td class="th table-check-cell"></td>
			<td id="week_<%= week.id %>"><%= @weekday[week.weekday.to_i] %></td>
			<% @class_timings.each do |clss|%><td> <% @employee_constraints = EmployeeConstraint.find_by_employee_id_and_class_timing_id_and_weekday_id(@employee.id,clss.id,week.id) %>
			<input type="checkbox" name="not_Available" data_week = "<%= week.id%>" data_class = "<%= clss.id%>" <%= 'checked' unless @employee_constraints.nil?%>/>
			</td>
			<%end%>
		</tr>
		<%end%>
		<%end%>
	</tbody>
	<%end%>
</table>
</div>
<br /><br />
<% unless @class_timings.empty?%>
<fieldset class="grey-bg no-margin">
	<legend>
		Action on create
	</legend>
	<div class="columns">
		<div class="colx2-left">
			<button id="assign_employee_constraints" title="Delete"   type="button">
				Save
			</button>
		</div>
	</div>
</fieldset>
<%end%> 
