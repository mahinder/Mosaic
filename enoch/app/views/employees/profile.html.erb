						<% @dir.each_with_index do |f,i|%>
						<li id="<%= f%>">
							<a href="#tab-loc-<%= i%>" id="current_tab" guardian_id="" title=""><%= f%></a>
						</li>
						<% end%>
						<% end%>
					</ul>
					<div class="tabs-content"style="overflow: auto;height: 300px;" >
						<%unless @dir.empty?%>
						<%@dir.each_with_index do |f,i|%>
						<% @files = EmployeeAttachment.find_all_by_dir_name(f)%>
						<div id="tab-loc-<%= i%>">
							<%unless @files.empty?%>
							<table class="table" cellspacing="0" width="100%">
								<thead>
									<tr>
										<th class="black-cell"></th>
										<th scope="col"> File Name </th>
										<th scope="col"> Created By </th>
										<th scope="col"> Deleted By </th>
										<th scope="col"> Action </th>
									</tr>
								</thead>
								<tbody>
									<% @files.each do |file|%>
									<tr>
										<th scope="row" class="table-check-cell"></th>
										<td><a href="/student/show_file_directory?dir=<%= f%>&file=<%= file.file_name%>&student=<%= file.employee_id%>&value=open"  title="Open" data_dir ="<%= f%>" data_file = "<%= file.file_name%>" data_student = "<%= file.employee_id%>"><%= file.file_name%></a></td>
										<td><%= file.created_by.full_name  unless file.created_by.nil? %></td>
										<td><%= file.deleted_by.full_name  unless file.deleted_by.nil? %></td>
										<td><a href="/employees/show_file_directory?dir=<%= f%>&file=<%= file.file_name%>&student=<%= file.employee_id%>&value=open"  title="Open" data_dir ="<%= f%>" data_file = "<%= file.file_name%>" data_student = "<%= file.employee_id%>"><img src="/assets/icons/fugue/pencil.png" width="16" height="16"></a><a href="/employees/show_file_directory?dir=<%= f%>&file=<%= file.file_name%>&student=<%= file.employee_id%>&value=delete"  title="Delete" data_dir ="<%= f%>" data_file = "<%= file.file_name%>" data_student = "<%= file.employee_id%>"><img src="/assets/icons/fugue/cross-circle.png" width="16" height="16"></a></td>
									</tr>
									<%end%>
								</tbody>
							</table>
							<%end%>
						</div>
						<%end%>
						<%end%>
					</div>
					<%else%> <h3>No Documents are attached</h3>
					<%end%>
				</div>
					
					
					
				</div>
			</div>
			<%end%>
		</form>
	</div>
</section>
