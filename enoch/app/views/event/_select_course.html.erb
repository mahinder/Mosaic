
			<div class="block-border no-margin" id="outer_block"><div class="block-content form" >
				
				<div class="content-columns left30">
					
					<div class="content-columns-sep"></div>
					
					<div class="content-left">
						
						<div class="with-head" style="margin-top: -2em;">
							<div class="head">
								<div>
									<div class="button menu-opener">
										Course List
									</div>
								</div>
							</div>
							
							<div class="dark-grey-gradient with-padding" style="height:300px; overflow: auto">
								
								<ul class="arbo with-title">
									<li>
										<a href="#" class="title-computer toggle">Courses</a>
										<ul>
							<% @courses.each do |c|%>
							<li class="close">
								<span class="toggle"></span>
									<a href="#" class="folder"><span><%= c.full_name %></span></a>
