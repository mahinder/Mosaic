<div class="block-border" id="">
	<div class="block-content form">
		<h1>Exams</h1>
		<div class="block-controls enoch_block">
					<ul class="controls-tabs js-tabs">
						<li >
					<%= link_to image_tag("/assets/icons/web-app/32/Back.png"), :controller => 'exam_groups',:action => 'show',:batch_id => @batch,:id =>@exam_group %> 
				</li>
					</ul>
				</div>	
		<% unless flash[:notice].nil? %>
	<ul class="message success grid_12">
       <li><strong><%= flash[:notice] %></strong></li>
       <li class="close-bt"></li>
       	</ul>
    <% end %>
		<% unless flash[:warn_notice].nil? %>
		<ul class="message warning">
       <li><strong><%= flash[:warn_notice] %></strong></li>
       <li class="close-bt"></li>
       	</ul>
		<% end %>
		<div class="bread_crumb">
			
			<b><%= link_to 'Courses', all_record_courses_path %> &raquo;
			<%= link_to @exam_group.batch.course.full_name ,all_record_courses_path%> &raquo;
			<%= link_to  "Batch " + @exam_group.batch.name, :controller => 'batches', :action => 'all_record', :id => @batch, :course_id => @batch.course  %> &raquo;
			<%= link_to 'Assessments',:controller=>'exam_groups', :action => 'index', :batch_id => @batch %> &raquo;
			<%= link_to @exam_group.assessment_name.name, :controller => 'exam_groups',:action => 'show',:batch_id => @batch,:id =>@exam_group %> &raquo;
			<%= link_to @exam.subject.name, :controller => 'exam_groups',:action => 'show',:batch_id => @batch,:id =>@exam_group %> &raquo;
			<%= @exam.topic.name %></b>
		</div><br />
		<%= form_for :exam, :url =>{:action =>'save_scores',:id=>@exam} do |f| %>
		 	
		<table class="table examshow no-margin" id="examShow" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th class="black-cell"></th>
					<th scope="col">Roll Number</th>
					<th scope="col">Name</th>
					<% if @exam_group.exam_type == 'Marks' || @exam_group.exam_type == 'MarksAndGrades'%> <th scope="col">Marks</th>
					<% else if @exam_group.exam_type == 'Custom'%> <th scope="col">Custom</th>
					<%else%>
					<th scope="col">Grades</th>
					<% end %><% end %> <th scope="col">Remarks(absent/disqualified etc)</th>
					<% unless @exam_group.exam_type == 'Marks' || @exam_group.exam_type == 'Custom'%> <th scope="col">Grade</th>
					<% end %>
				</tr>
			</thead>
			<tbody>
				<% @students.each do |student| %>
				<tr>
					<td class="th table-check-cell"></td>
					<td><%=student.class_roll_no %></td>
					<td><%= student.full_name %> </td>
					<% @exam_score = @exam.score_for(student) %>
					<%if @exam_group.exam_type == 'Marks' || @exam_group.exam_type == 'MarksAndGrades'%> 
					<td > <%= text_field_tag "exam[#{student.id}][marks]", @exam_score.marks, :size => '4' %></td>
					<%else if @exam_group.exam_type == 'Custom'%>
					<td ><%= text_field_tag "exam[#{student.id}][custom]", @exam_score.custom, :size => '25' %></td>
					<%else%>
					 <td class="select-fixed-width1"><%= select "exam[#{student.id}]", "grading_level_detail_id", @grades.map {|g| [g.grading_level_detail_name, g.id] },
                      { :prompt =>"Select", :selected => @exam_score.grading_level_detail_id } %></td>
					<%end%><%end%>
					 <td> <%= text_field_tag "exam[#{student.id}][remarks]", @exam_score.remarks, :size => 25 %></td> 
					<% unless @exam_group.exam_type == 'Marks' || @exam_group.exam_type == 'Custom' %> <td class="col-1"><%= @exam_score.grading_level_detail.grading_level_detail_name unless  @exam_score.grading_level_detail.nil? %></td>
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
		<br />
		<fieldset class="grey-bg no-margin">
			<legend>
				Action
			</legend>
			<p class="input-with-button">
				<%= f.submit "Save", :class => "big-button"%>
			</p>
		</fieldset>
		<% end %> <div class="extender"></div>
	</div>
</div>
