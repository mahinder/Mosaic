<div class="block-border" id="outer_block">
	<%= form_for @finance_transaction,:url => expenses_path + '.json',:html => { :class => "block-content form", :id => "expense-form"}, do |form| %>
	<%= render 'shared/form_errors', :object => form.object %> <h1>Expense</h1>
	<fieldset class="grey-bg">
		<legend>
			Required Fields
		</legend>
		<div class="columns">
			<div class="colx2-left required">
				<label for="incometitle">Title</label>
				<span class="relative"> <%= form.text_field :title ,:class => "special_char"%> </span>
			</div>
			<div class="colx2-center required">
				<label for="incomecategory">Category</label>
				<span class="relative"> <%= select :transaction, :category_id, @categories.map { |c| [c.name, c.id] },:prompt=>'Select' %> </span>
			</div>
		</div>
		<div class="columns">
			<div class="colx2-left required">
				<label for="incomeamount">Amount</label>
				<span class="relative"> <%= form.text_field :amount ,:class => "numeric"%> </span>
			</div>
			<div class="colx2-center required">
				<label for="incomedate">Date</label>
				<span class="relative input-type-text"> <%= form.text_field  :date, :value => Date.today.strftime('%d''-''%m''-''%Y') ,class: "datepicker" ,:size => "15" %> <img width="16" height="16" src="/assets/icons/fugue/calendar-month.png"> </span>
			</div>
		</div>
			
	</fieldset>
	<fieldset>
		<legend>
			Other Information
		</legend>
		<div class="columns">
			<p class="colx2-left">
				<label for="complex-en-url">Description</label>
				<span class="relative"> <%= form.text_field :description,:size => "100" %> </span>
			</p>
		</div>
	</fieldset>
	<fieldset class="grey-bg no-margin">
		<legend>
			Action on create
		</legend>
		<div class="columns">
			<div class="colx2-right">
				<button id="create_expense" type="submit">
					Create
				</button>
				<button id="reset_expense" type="button">
					Clear
				</button>
				<input type="hidden" id="current_object_id" name="current_object_id" value=""/>
			</div>
		</div>
	</fieldset>
	<% end %>
</div>
<br/>
