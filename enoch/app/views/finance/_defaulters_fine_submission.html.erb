<style type="text/css">
.task-dialog > li.auto-hide-defaulter {
    display: block;
}
</style>

<ul class="task-dialog">
		<li class="auto-hide-defaulter">
			<%= form_for :fine, :url => {:action => 'update_defaulters_fine_ajax' } do |form| %>
				<label>Due date has been exceeded. Please collect fine amount.</label>
				<%= form.text_field :fee, :value=>'' %>
				<button type="submit" id="add_fine_to_fees_defaulter">Add Fine</button>
				  <%= form.hidden_field :fees_for_defaulter_student, :value => @student.id %>
				  <%= form.hidden_field :fees_for_defaulter_date, :value => @date.id %>
			<% end %>
		</li>
</ul>

