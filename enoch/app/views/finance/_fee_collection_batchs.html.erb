
<label>Batch:
    <%= link_to_function 'All', "$('#category_ids_id').each(function() {$('#category_ids_id option').attr('selected','selected') });" %>,
    <%= link_to_function 'None', "$('#category_ids_id').each(function() {$('#category_ids_id option').removeAttr('selected') });" %> 
 </label> 

<%= collection_select(:category_ids, :id, @fee_category.batches,:id,:full_name,
{ :selected => @fee_category.batches.map { |c| [c.full_name, c.id] }},
{:multiple => true, :style => "width:250px;height:100px;"  }) %>