<div class="block-content form">
<%= form_for :finance_fee_collection,
  :url => {:action => 'fee_collection_update', :id => @finance_fee_collection.id} do |form| %>

<fieldset>
	<legend>
		Edit Fee Collection Date
	</legend>

  <div class="label-field-pair">
    <label for="reason"> Fee category:</label>
    <div class="text-input-bg"> <%= @finance_fee_collection.fee_category.name %></div>
  </div>
  <div class="label-field-pair">
    <label for="reason"> Course for this Category:</label>
    <div class="text-input-bg"> <%= @finance_fee_collection.batch.full_name %></div>
  </div>
  <div class="columns">
  	<p class="colx1-left required">
	    <label for="reason">Fee Collection Name</label>
	    <div class="text-input-bg"><%= form.text_field :name %></div>
  	</p>
  </div>
 <div class="columns">
   <p class="colx3-left required">
    <label for="reason">  Start Date</label>
    <span class="input-type-text relative required"><%= form.text_field :start_date_edit, :value => @finance_fee_collection.start_date.strftime('%d''-''%m''-''%Y') , :class => "modal_date_picker", :size => 20,:readonly => "1" %><%= image_tag "icons/fugue/calendar-month.png" %></span>
   </p>
  <p class="colx3-center required">
    <label for="reason">  End Date</label>
    <span class="input-type-text relative required"><%= form.text_field :end_date_edit, :value => @finance_fee_collection.end_date.strftime('%d''-''%m''-''%Y') , :class => "modal_date_picker", :size => 20,:readonly => "1" %><%= image_tag "icons/fugue/calendar-month.png" %></span>    
  </p>
  <p class="colx3-right required">
    <label for="reason">  Due Date</label>
    <span class="input-type-text relative required"><%= form.text_field :due_date_edit, :value => @finance_fee_collection.due_date.strftime('%d''-''%m''-''%Y') , :class => "modal_date_picker", :size => 20,:readonly => "1" %><%= image_tag "icons/fugue/calendar-month.png" %></span>    
  </p>
 </div>

</fieldset>
<% end %>
</div>