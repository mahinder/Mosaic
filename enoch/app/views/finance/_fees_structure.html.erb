<%unless @fee_collection.nil?%>

<div class="columns">
	<p class="colx3-left">
		<label for="fee-collection">Fee Collection Name</label>
		<%= @fee_collection.name %>
	</p>
	<p class="colx3-center">
		<label for="fee-cateegory">Fee Category Name</label>
		<%= @fee_category.name %>
	</p>
</div>
<div class="columns">
	<p class="colx3-left">
		<label for="start-date">Start Date</label>
		<%= @fee_collection.start_date.strftime("%d-%m-%Y") %>
	</p>
	<p class="colx3-center">
		<label for="end-date">End Date</label>
		<%= @fee_collection.end_date.strftime("%d-%m-%Y") %>
	</p>
	<p class="colx3-right">
		<label for="due-date">Due Date</label>
		<%= @fee_collection.due_date.strftime("%d-%m-%Y") %>
	</p>
</div>

<% total_fees =0 %>
<% unless @fee_particulars.nil? %>
  <table class="table" id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  	<thead>
  		<th class="black-cell"></th>
  		<th scope="col"><span class="column-sort"> <a href="#" title="Sort up" class="sort-up"></a> <a href="#" title="Sort down" class="sort-down"></a> </span><%= t('sl_no') %></th>
		<th scope="col">Particulars</th>
		<th scope="col"><span class="column-sort"> <a href="#" title="Sort up" class="sort-up"></a> <a href="#" title="Sort down" class="sort-down"></a> </span>Amount (Rs.)</th>
  	</thead>
<tbody>
    <% i = 0 %>
    <% @fee_particulars.each do |fee| %>
      <tr class="tr-<%= cycle("odd","even") %>">
      	<td class="th table-check-cell"></td>
        <td class="col-1"><%= i+1 %></td>
        <td class="col-2"><%= shorten_string(fee.name,20) %></td>
        <td class="col-6"><%= fee.amount%></td>
      </tr>
      <% i += 1 %>
      <% total_fees += fee.amount %>
    <% end %>

    <tr class="tr-blank"></tr>
    <tr class="tr-blank"></tr>

    <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
      <td class="th table-check-cell"></td>
      <td></td>
      <td><strong> Total Fees</strong></td>
      <td class="col-6" ><%= total_fees%></td>
    </tr>

    <% unless @total_discount == 0 %>
      <tr class="tr-blank"></tr>
      <tr class="tr-blank"></tr>
      <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
      	<td class="th table-check-cell"></td>
        <td><span>Discount</span></td>
        <td></td>
        <td></td>
      </tr>
      <% @batch_discounts.each do |d| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="th table-check-cell"></td>
          <td class="col-1"><%= i+1 %></td>
          <td class="col-2"><%= shorten_string(d.name,20) %></td>
          <td class="col-6"><%= d.discount%> % </td>
        </tr>
        <% i += 1 %>
      <% end %>
      <% @student_discounts.each do |d| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="th table-check-cell"></td>
          <td class="col-1"><%= i+1 %></td>
          <td class="col-2"><%= shorten_string(d.name,20) %></td>
          <td class="col-6"><%= d.discount%> %</td>
        </tr>
        <% i += 1 %>
      <% end %>
      <% @category_discounts.each do |d| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="th table-check-cell"></td>
          <td class="col-1"><%= i+1 %></td>
          <td class="col-2"><%= shorten_string(d.name,20) %></td>
          <td class="col-6"><%= d.discount%> %</td>
        </tr>
        <% i += 1 %>
      <% end %>
      <tr class="tr-blank"></tr>
      <tr class="tr-blank"></tr>

      <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
      	<td class="th table-check-cell"></td>
        <td></td>
        <td><b>Total Discount</b></td>
        <td class="col-6" ><%= "#{@total_discount} %" %></td>
      </tr>

      <tr class="tr-blank"></tr>
      <tr class="tr-blank"></tr>
      <% net_fee = (total_fees - ((total_fees*@total_discount)/100)) %>
      <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
      	<td class="th table-check-cell"></td>
        <td class="col-8"><strong> Fee to be paid</strong></td>
        <td></td>
        <td class="col-6" ><b> <%= net_fee %> </b></td>
      </tr>

    <% end %>
    </tbody>
  </table>

<% end %>

<fieldset class="grey-bg no-margin">
	<legend>Actions</legend>
	<%= link_to "PDF Report",{:action => "pdf_fee_structure",:id => @student.id,:id2=>@fee_collection.id},:target => '_blank',:class => 'big-button'%>
</fieldset>
<%else%>
<h3> => Sorry No Record Found</h3>

<%end%>
