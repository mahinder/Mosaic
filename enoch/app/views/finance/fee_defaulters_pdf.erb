
  <h2><%=@date.name%></h2>

  <div class="report">

    <div id ="main_info">
      <h4> <%= "Class :"+ " " "#{@batch.full_name}" %></h4>
    </div>

      <table class="" id="pdf-table" width="100%" cellspacing="0">
      	<thead>
      		<tr class="table-header"><td class="col-pdf">Sl no.</td><td class="col-pdf"> Name </td><td class="col-pdf"> Amount </td></tr>
      	</thead>
        <tbody>
        <% i = 0 %>
        <% index = 0   %>
        <% @students.each do |s| %>
          <% if i== 22 %>
            <% i= 0 %>
            <tr class="page-break"><td colspan="3"></td></tr>

              <tr class="odd"><td class="col-pdf">Sl no.</td><td class="col-pdf">Name</td><td class="col-pdf">Amount</td></tr>
          <% end %>
          <% @fee_collection = FinanceFeeCollection.find_by_id(params[:date]) %>
          <% @fee_category = FinanceFeeCategory.find_by_id_and_school_session_id(@fee_collection.fee_category_id, @current_session,:conditions => ["is_deleted IS NOT NULL"]) %>
          <% @fee_particulars = @fee_category.fees(s) %>
          <% total_fees = 0 %>
          <% @fee_particulars.each do |p| %>
            <% total_fees += p.amount %>
          <% end %>
          <% if s.check_fees_paid(@date) == false %>
              <% i += 1  %>
            <tr>
              <td class="col-pdf"><%= index += 1 %></td>
              <td class="col-pdf"><%= s.full_name %></td>
              <td class="col-pdf"><%= total_fees %></td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>

</div>