
<table class="table feesSubmitSearchStudent no-margin" id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <% unless @students_result.blank? %>
  <thead>
    		<tr>
				<th class="black-cell"></th>
				<th scope="col">
					<span class="column-sort">
						<a href="#" title="Sort up" class="sort-up"></a>
						<a href="#" title="Sort down" class="sort-down"></a>
					</span>
					 First Name
				</th>
				<th scope="col">Batch</th>
				<th scope="col">
					<span class="column-sort">
						<a href="#" title="Sort up" class="sort-up"></a>
						<a href="#" title="Sort down" class="sort-down"></a>
					</span>
					 Adm no
				</th>
			</tr>
    	</thead>
    	<tbody>
    <% @students_result.each_with_index do |student, i| %>
      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-1"><%= i+1 %></td>
        <td id="feeStudentDates" studentId= "<%=student.id%>" ><%=  link_to student.full_name, :controller => "finance", :action => "fees_student_dates", :id => student.id%></td>
        <td><%= student.batch.full_name %></td>
        <td><%= student.admission_no %></td>
      </tr>
    <% end %>
  <% else %>

    <tr class="tr-<%= cycle('odd', 'even') %>">
      <td class="col-2">No students found</td>
    </tr>
  <% end %>
  </tbody>
</table>