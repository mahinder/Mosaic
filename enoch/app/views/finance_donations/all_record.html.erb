<div class="block-border" id="outer_block">
	<%= form_for @finance_donation,:html => { :class => "block-content form", :id => "donation-form"} do |form| %>
	<%= render 'shared/form_errors', :object => form.object %> <h1>Donation</h1>
	<fieldset class="grey-bg">
		<legend>
			Required Fields
		</legend>

		<div class="columns">
			<div class="colx3-left">
				<label for="simple-required">Donor</label>
				<%= form.text_field :donor , :class => "special_char"%>
			</div>
			<div class="colx3-center" >
				<label for="simple-required">Amount</label>
				<%= form.text_field :amount ,:size => 20 ,:class => "numeric" %>
			</div>
			<div class="colx3-right" >
				<label for="simple-required" >Date</label>
				<span class="relative input-type-text"> <%= form.text_field  :date, :value => Date.today.strftime('%d''-''%m''-''%Y') ,class: "datepicker", :size => 16 %> <img width="16" height="16" src="/assets/icons/fugue/calendar-month.png"> </span>
			</div>

		</div>
		
	</fieldset>
	<fieldset>
		<legend>
			Other Information
		</legend>
		<div class="columns">
			<p class="colx2-left">
				<label for="complex-en-url">Description</label>
				<span class="relative"> <%= form.text_field :description,:size => "100" %> </span>
			</p>
		</div>
	</fieldset>
	<fieldset class="grey-bg no-margin">
		<legend>
			Action on create
		</legend>
		<div class="columns">
			<div class="colx2-right">
				<button id="create_donor" type="submit">
					Create
				</button>
				<button id="reset_donor" type="reset">
					Clear
				</button>
				<input type="hidden" id="current_object_id" name="current_object_id" value=""/>
			</div>
		</div>
	</fieldset>
	<% end %>
</div>
<br/>
