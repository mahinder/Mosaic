			<div class="block-border" id="outer_block">
				<%= form_for @finance_transaction_category, :html => { :class => "block-content form", :id => "transaction_category-form"} do |form| %>
				<%= render 'shared/form_errors', :object => form.object %>
				<h1>Finance Transaction Category</h1>				
								
				<fieldset class="grey-bg">
					<legend>Required Fields</legend>
					<div class="colx3-left-double required">
						<label for="transaction_category_name">Name</label>
						<span class="relative">
							<%= form.text_field :name ,:class => "special_char"%>
						</span>
					</div>
					
				</fieldset>
								
				<fieldset>
					<legend>Other Information</legend>
					
					<div class="columns">
						<p class="colx2-left">
							<label for="complex-en-url">Description</label>
							<span class="relative">
								<%= form.text_field :description, :size => "100" %>
							</span>
							<br /><br />
							<%= form.check_box :is_income, :checked => "checked" %><span> </span> <span>Is this under income?</span>
						</p>
						
							
						
					</div>
				</fieldset>
				
				<fieldset class="grey-bg no-margin">
					<legend>Action on create</legend>
					<div class="columns">
						<div class="colx2-right">
							<button id="create_transaction_category" type="submit">Create</button>
							<button id="update_transaction_category" type="button" disabled="true">Update</button>
							<button id="reset_transaction_category" type="button">Clear</button>
							<input type="hidden" id="current_object_id" name="current_object_id" value=""/>
						</div>
					</div>
				</fieldset>
				<% end %>
			</div>
			<br/>
			<div id="table-block" class="block-border">
				<%= render 'finance_transaction_category' %>
			</div>
