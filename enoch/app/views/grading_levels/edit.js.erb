jQuery('#modal-box').html('<%= escape_javascript render('edit') %>');
$.modal({
        content: jQuery('#modal-box'),
        title: 'Enter New Grading Level',
        maxWidth: 500,
        buttons : {
			'Update' : function(win) {
				var g_name = $("#modal #grading_level_name").val();
				var grade_id = $("#modal #grade_id").val();
				var g_min_score = $("#modal #grading_level_min_score").val();
	            var g_batch_id = $("#grading_level_batch_id").val();
				$.get("update_grade",{'grading_level': {
					'batch_id': g_batch_id,
					'name': g_name,
					'min_score': g_min_score
				},'id': grade_id }, function(data) {
					$("#grade_change").empty();
					$("#grade_change").html(data);
				});
				
		win.closeModal();
				},
			'Cancel' : function(win) {
				win.closeModal();
			}
		}
          });