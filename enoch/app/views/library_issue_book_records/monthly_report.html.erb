<div class="block-border" id="outer_block">
	<div class="block-content form">
		<%if @report == "monthly"%> <h1>Monthly Record</h1>
		<div class="block-controls enoch_block">
			<ul class="controls-tabs js-tabs">
				<li >
					<%= link_to image_tag("/assets/icons/web-app/32/Back.png"),:controller=>"/sessions", :action=>'dashboard' %>
				</li>
			</ul>
		</div>
		<%= form_for :report, :url => {:action => 'show_transaction_report'} do |form| %>
		<div class="columns">
			<p class="colx3-left required">
				<label for="start_date">Start Date</label>
				<span class="input-type-text relative required"><%= form.text_field :start_date,:value => (Date.today.strftime('%d''-''%m''-''%Y')), :class => "datepicker", :size => 20,:readonly => "1" %><%= image_tag "icons/fugue/calendar-month.png" %></span>
			</p>
			<p class="colx3-center required">
				<label for="end_date">End Date</label>
				<span class="input-type-text relative required"><%= form.text_field :end_date,:value => (Date.today.strftime('%d''-''%m''-''%Y')), :class => "datepicker", :size => 20,:readonly => "1"  %><%= image_tag "icons/fugue/calendar-month.png" %></span>
			</p>
			<p class="colx3-right" style="margin-top: 1.5em;">
				<%= submit_tag "View Report",:class=>'big-button' %>
			</p>
		</div>
		<%end%>

		<%else%> 
		<h1>Book Record</h1>
		<div class="block-controls enoch_block">
			<ul class="controls-tabs js-tabs">
				<li >
					<%= link_to image_tag("/assets/icons/web-app/32/Back.png"),:controller=>"/sessions", :action=>'dashboard' %>
				</li>
			</ul>
		</div>
		<fieldset>
			<div class="columns" id = "book_return_div">
				<div class="colx2-left required">
				<p class="inline-small-label">
					<label class="required" for="field13">Book</label>
					<select  id="book_wise_record" name="book_record" ></select>
				</p>
				</div>
				<div class="colx2-right required">
				<button name="report" id ="report_bookwise">View Report</button>
				</div>
			</div>
		</fieldset>

		<%end%>
	</div>
</div>
