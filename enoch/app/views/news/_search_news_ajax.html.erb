<% if @news.empty? %>
  <div id="news_no_result">No News found</div>
<% else %>
<fieldset>
	<legend>
		News
	</legend>


 <div id="column grey-bg">
  <% @news.each do |r| %>

    <p class="col-1">
    <% link_value = r.title %>
    <h3><%=  link_to link_value, :controller => "news", :action => 'view', :id => r.id%></h3><br/>
    <small> Posted on <%= r.created_at.strftime("%A, %d %B, %Y") %></small>
</p> 
  <% end %>
    </div>
  </fieldset>
<% end %>

