<div class="block-border">
	<div class="block-content form">
		<h1>Manage payroll</h1>
		<div class="block-controls enoch_block">
			<ul class="controls-tabs js-tabs">
				<li >
					<a href="/sessions/hr_settings" title ="Back"> <img src="/assets/icons/web-app/32/Back.png" width="24" height="24"></a>
				</li>
			</ul>
		</div>
		<% unless flash[:notice].nil? %>
		<p class="flash-msg">
			<%= flash[:notice] %>
		</p>
		<% end %>
		
			<%= form_for :manage_payroll, :url=>{:id=>@employee.id} do |s| %>
			<table class="table" cellpadding="0" cellspacing="0" align="center">
				<thead>
					<tr>
					<th scope="col">Payroll Category</th>
				<th scope="col">Amount</th>
				</tr>
			</thead>
			<tbody>
				<% @independent_categories.each do |c| %>
				<tr>
					<td><%= c.name %></td>
					<td><%= s.text_field :amount, :index => c.id %></td>
				</tr>
			<% end %>
			<% @dependent_categories.each do |c| %>
			
				<tr>
					<td><%= c.name %></td>
					<td><%= s.text_field :amount, :index => c.id %></td>
				</tr>
			
			<% end %>
				
			</tbody>
			</table>
			
			<fieldset class="grey-bg no-margin">
								<legend>
									Action
								</legend>
								<p class="input-with-button">
									<%= s.submit "Finish", :class => "big-button"%>
								</p>
							</fieldset>
			<% end %>
		
	</div>
</div>
