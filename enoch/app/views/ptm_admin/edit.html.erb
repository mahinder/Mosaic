<div class="block-border" id="outer_block">
	<div class="block-content form">
<%= form_for(@ptm_master) do |f| %>
  <% if @ptm_master.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ptm_master.errors.count, "error") %> prohibited this ptm_master from being saved:</h2>

      <ul>
      <% @ptm_master.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset class="grey-bg">
	<legend>
		Required Field
	</legend>
	<div class="column">
		<p class="colx2-left required">
			<label for="title">Title</label>
			<%=f.text_field :title%>
		</p>
		<p class="colx2-right required">
			<label for="Start Date">Start Date</label>
			<span class="input-type-text"><%= f.text_field :ptm_start_date,:value => @ptm_master.ptm_start_date.strftime('%d''-''%m''-''%Y'), :class => "modal_date_picker" ,:readonly => "1"%><%= image_tag "icons/fugue/calendar-month.png" %></span>
		</p>
	</div>
	<div class="column">
		<p class="colx2-left required">
			<label for="description">Description</label>
			<%=f.text_area :description, :rows => 2, :cols => 28 %>
		</p>
		<p class="colx2-right required">
			<label for="End Date">End Date</label>
			<span class="input-type-text"><%= f.text_field :ptm_end_date,:value => @ptm_master.ptm_end_date.strftime('%d''-''%m''-''%Y'), :class => "modal_date_picker" ,:readonly => "1"%><%= image_tag "icons/fugue/calendar-month.png" %></span>
		</p>
	</div>	
	<div class="column">
		<p class="colx2-right">
			<label for="Create Event">Create Event?</label>
			<%unless @ptm_master.event_id.nil? %>
			   <%= check_box("ptm_create","event",:checked=>"checked")%>
			<%else%>
			<%= check_box("ptm_create","event")%>
			<%end%>
		</p>
	</div>	
</fieldset>

<% end %>
</div>
</div>