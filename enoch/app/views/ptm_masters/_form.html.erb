<div class="block-border" id="outer_block">
	<div class="block-content form">
<%= form_for(@ptm_master) do |f| %>

<fieldset class="grey-bg">
	<legend>
		Required Field
	</legend>
	<div class="columns">
		<p class="colx2-left required">
			<label for="title">Title</label>
			<%=f.text_field :title%>
		</p>
		<p class="colx2-right required">
			<label for="Start Date">Start Date</label>
			<%=f.text_field :ptm_start_date, :value => Date.today.strftime("%d-%m-%Y"), :class => "modal_date_picker",:readonly=>"1"%>
		</p>
	</div>
	<div class="columns">
		<p class="colx2-left required">
			<label for="description">Description</label>
			<%=f.text_area :description, :rows => 2, :cols => 28 %>
		</p>
		<p class="colx2-right required">
			<label for="End Date">End Date</label>
			<%=f.text_field :ptm_end_date, :value => Date.today.strftime("%d-%m-%Y"), :class => "modal_date_picker",:readonly=>"1"%>
		</p>
	</div>	
	<br />
	<div class="columns">
		<p class="colx2-left">
			<input type="checkbox" name="ptm_create_event" id="ptm_create_event" value="1"> Create Event? &nbsp; <input type="checkbox" name="ptm_create_event_sms" id="ptm_create_event_sms" value="1">Send Sms?
		</p>
		
	</div>	
</fieldset>

<% end %>
</div>
</div>
