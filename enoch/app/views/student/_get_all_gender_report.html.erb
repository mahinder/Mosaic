<!-- <%=Rails.root.join('app','assets','javascripts','application.js')%> -->
<%unless @students.empty?%>
<form class="block-content form" id="table_form" method="post" action="">
					<h1>Student List</h1>
							<table id="active-table" class="table gender_all_report no-margin" cellspacing="0" width="100%">
								<thead>
									<tr>
										<th class="black-cell"></th>
										<th scope="col">
											<span class="column-sort">
												<a href="#" title="Sort up" class="sort-up"></a>
												<a href="#" title="Sort down" class="sort-down"></a>
											</span>
											Admission_no
										</th>
										<th scope="col">
											<span class="column-sort">
												<a href="#" title="Sort up" class="sort-up"></a>
												<a href="#" title="Sort down" class="sort-down"></a>
											</span>
											Name
										</th>
										<% if @table_type=='category'%>
										<th scope="col">
											<span class="column-sort">
												<a href="#" title="Sort up" class="sort-up"></a>
												<a href="#" title="Sort down" class="sort-down"></a>
											</span>
											Student Category
										</th>
										<%else if @table_type=='religion'%>
										<th scope="col">
											<span class="column-sort">
												<a href="#" title="Sort up" class="sort-up"></a>
												<a href="#" title="Sort down" class="sort-down"></a>
											</span>
											Religion
										</th>
										<%else%>
										<th scope="col">
											<span class="column-sort">
												<a href="#" title="Sort up" class="sort-up"></a>
												<a href="#" title="Sort down" class="sort-down"></a>
											</span>
											Date Of Birth
										</th>
										<%end%>
										<%end%>
										
										<th scope="col">
											<span class="column-sort">
												<a href="#" title="Sort up" class="sort-up"></a>
												<a href="#" title="Sort down" class="sort-down"></a>
											</span>
											Gender
										</th>
										<th scope="col">
											<span class="column-sort">
												<a href="#" title="Sort up" class="sort-up"></a>
												<a href="#" title="Sort down" class="sort-down"></a>
											</span>
											Batch
										</th>
										
									</tr>
								</thead>
								<tbody>		
									<% @students.each do |student| %>
									<tr>
										<td></td>
										<td><%=student.admission_no%></td>
										<td><%=student.full_name%></td>
										<% if @table_type=='category'%>
										<td><%=student.student_category.name%></td>
										<%else if @table_type=='religion'%>
										<td><%=student.religion%></td>
										<%else%>
										<td><%=student.date_of_birth.strftime('%d''-''%m''-''%Y')%></td>
										<%end%>
										<%end%>
										<td><%=student.gender%></td>
										<td><%=student.batch.full_name%></td>
										
									</tr>
									<% end %>
								</tbody>
							</table>
				</form>	
	 <fieldset class="grey-bg no-margin">
			<legend>
				Action
			</legend>
			<p class="input-with-button">
				<%unless @gender.nil? || @course.nil? %>
				<input type="button" class="big-button" value="PDF Report" onclick="$(location).attr('href','/student/pdf_report?gender=<%=@gender%>&course=<%=@course%>&filter=<%=@table_type%>');"/>
				
			<%else if !@gender.nil? || !@batch.nil?%>
			<input type="button" class="big-button" value="PDF Report" onclick="$(location).attr('href','/student/pdf_report?gender=<%=@gender%>&batch=<%=@batch%>&filter=<%=@table_type%>');"/>
			<%else%>
				<input type="button" class="big-button" value="PDF Report" onclick="$(location).attr('href','/student/pdf_report?query=<%=@criteria%>&filter=<%=@table_type%>');"/>
			<%end%>
			<%end%>
			</p>
		</fieldset> 

<%else%>
<h3>Record not found</h3>
<%end%>






				