<div id="exam_grou_index">
	<div class="block-border" id="outer_block">
		<div class="block-content form">
			<h1>Co Scholastic Assessment</h1>
			<div class="block-controls enoch_block">
				<ul class="controls-tabs js-tabs">
					<li>
							<a href="/co_scholastic_areas/all_record" title="Co Scholastic Area" class="with-tip"><%= image_tag "dashboard/co-scholastic_area.png", :size => "24x24"  %></a>
						</li>
						<li>
							<a href="/co_scholastic_activities/all_record" title="Co Scholastic Activity" class="with-tip"><%= image_tag "dashboard/co-scholastic_activity.png", :size => "24x24"  %></a>
						</li>
					<li >
					<%= link_to image_tag("/assets/icons/web-app/32/Back.png"), :controller=>'/sessions',:action=>'dashboard' %>
				</li>
				</ul>
			</div>
			
			<% unless flash[:notice].nil? %>
	<ul class="message success grid_12">
       <li><strong><%= flash[:notice] %></strong></li>
       <li class="close-bt"></li>
       	</ul>
    <% end %>
			<%= form_for :scholastic_area_assessment, :url=>{:controller =>'student_co_scholastic_assessments',:action=>'new'} do |x| %>
			<input type="hidden" id="current_user" value="<%= @user.role_name%>" />
			<%if @user.admin? || @user.employee? && @current_user.privileges.map{|p| p.id}.include?(Privilege.find_by_name('EnterResults').id) || @current_user.privileges.map{|p| p.id}.include?(Privilege.find_by_name('ExaminationControl').id) %>
			<div class="columns">
				<p class="colx3-left required select-fixed-width1">
					<label for="complex-fr-style">Course</label>
					<%= select :student_assessment_courses, :name, @course.map {|b| [b.course_name, b.id]}, :prompt => "Select" %>
				</p>
				<p class="colx3-left required select-fixed-width1" id="update_batch">
					<label for="complex-fr-style">Batch</label>
						<%= select :exam_reports, :batch_id, @batches.map { |s| [s.name, s.id]},:prompt =>'Select' %>
				</p>
				<p class="colx3-right required select-fixed-width1">
					<label for="term_master">Term</label>
	          		<%= select :assessment, :term_master_id, TermMaster.active.map{|c| [c.name, c.id]},:prompt => "Select" %>
				</p>
			</div>
			<%else%>
			<div class="columns select-fixed-width1">
				
					<label for="complex-fr-style">Batch</label>
					<div id="update_batch" class="select-fixed-width1">
						<%= select :exams, :batch_id, @batch.map { |s| [s.full_name, s.id]},{:prompt =>'Select'},:id =>'exams_batch_id' %>
					</div>
				
			</div>
			<%end%>
			<fieldset class="grey-bg no-margin">
	<legend>
		Action
	</legend>
	<p class="input-with-button">
		
		<%= x.submit "Next", :class => "big-button", :id =>"student_assessment_create"%>
	</p>
</fieldset>
			
			<%end%>
			<div class="extender"></div>
		</div>
	</div>
</div>
